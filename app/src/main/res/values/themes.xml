<resources >
    <!-- Base application theme. -->
    <style name="Theme.JokesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JokesApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JokesApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JokesApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Input Box Style for SignUp page -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="behavior_hideable">false</item>
        <item name="android:textColorHint">@color/earth_green</item> <!--label color when unclicked -->
        <item name="hintTextColor">@color/earth_green</item> <!--label color when clicked/floating -->
        <item name="boxStrokeColor">@color/blue_purple</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeErrorColor">@color/error_red</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">15</item>
    </style>

    <!--Input Box Style for Password Box on SingUp Page -->
    <style name="CustomPasswordInputBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textColorHint">@color/earth_green</item> <!--label color when unclicked -->
        <item name="hintTextColor">@color/earth_green</item> <!--label color when clicked/floating -->
        <item name="boxStrokeErrorColor">@color/error_red</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">8</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/earth_green</item>
    </style>


    
    
</resources>